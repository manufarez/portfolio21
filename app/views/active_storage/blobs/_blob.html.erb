<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %> animated fadeInUp">
  <% if blob.representable? %>
    <%= image_tag blob, class:"m-auto", loading: "lazy", alt: blob.filename %>
  <% end %>

  <% if user_signed_in? %>
    <figcaption class="attachment__caption">
      <% if caption = blob.try(:caption) %>
        <%= caption %>
      <% end %>
    </figcaption>
  <% end %>

</figure>
