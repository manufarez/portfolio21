<div class="max-w-4xl mx-auto mb-12">
  <div class="mb-6 text-center">
    <p class="mb-2 font-bold tracking-wide text-gray-400 uppercase dark:text-gray-500">Work</p>
    <h2 class="text-4xl font-bold text-gray-900 dark:text-gray-100">Recent projects</h2>
  </div>
  <% Project.all.sort_by(&:position).reverse.each do |project| %>
    <%= link_to project_slug_path(project) do %>
      <div class="px-8 py-6 mb-2 group hover:bg-gray-100 dark:hover:bg-cod-gray-light md:rounded-xl">
        <span class="text-xs font-medium tracking-wider text-gray-400 uppercase dark:text-gray-600"><%= raw project.tags.map(&:name).join(', ') %></span>
        <h3 class="mb-3 text-3xl font-bold text-gray-700 dark:text-gray-200"><%= project.title %></h3>
        <p class="mb-3 text-gray-500 dark:text-gray-200"><%= project.intro %></p>
        <div class="transition duration-500 ease-in-out transform group-hover:translate-x-1">
          <span class="font-medium text-gray-600 dark:text-gray-500">Learn more â†’</span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
