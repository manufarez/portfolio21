<div class="h-screen bg-gray-100 flex flex-col items-center justify-center">
  <%= render 'layouts/notice'  %>
  <div class="max-w-5xl">
    <div class="bg-white shadow-md mb-6 overflow-hidden rounded-lg">
      <table class="table-auto">
        <thead>
          <tr class="bg-gray-200 text-gray-600 uppercase text-xs leading-normal">
            <th class="py-3 px-6 text-left">Title</th>
            <th class="py-3 px-6 text-left">Tags</th>
            <th class="py-3 px-6 text-left">Intro</th>
            <th class="py-3 px-6 text-left">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr class="border-b border-gray-200 hover:bg-gray-100">
              <td class="py-3 px-6 text-left whitespace-nowrap text-gray-600 text-sm font-medium"><%= project.title %></td>
              <td class="py-3 px-6 text-left whitespace-nowrap text-gray-600 text-sm"><%= project.tags.map(&:name).join(', ') %></td>
              <td class="py-3 px-6 text-left text-gray-600 text-sm"><%= truncate(project.intro, length: 150) %></td>
              <td class="py-3 px-6 text-center">
                <div class="flex item-center justify-center items-center text-gray-600 text-sm">
                  <%= link_to project do %><i class="fas fa-eye w-4 mr-2 transform hover:text-gray-500 hover:scale-105"></i><% end %>
                  <%= link_to edit_project_path(project) do %><i class="far fa-edit w-4 mr-2 transform hover:text-gray-500 hover:scale-105"></i><% end %>
                  <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="far fa-trash-alt w-4 mr-2 transform hover:text-gray-500 hover:scale-105"></i><% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div>
      <%= link_to('Logout', destroy_user_session_path, method: :delete, class:"inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-700 hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500") %>
  </div>
</div>


