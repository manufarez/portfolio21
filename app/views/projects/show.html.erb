<div class="bg-white dark:bg-black flex-grow">
  <div class="px-8 mx-auto mb-12 max-w-4xl pt-12">

    <div class="mb-14 transition duration-500 ease-in-out transform hover:-translate-x-1"><%= link_to '<- Back', root_path, class:"text-gray-400 dark:text-gray-500" %></div>

    <div class="mx-auto max-w-3xl">
      <div class="flex justify-between items-center mb-6">
        <h3 class="text-5xl text-gray-800 font-bold dark:text-gray-100"><%= @project.title %></h3>
        <% if user_signed_in? %>
          <div class="inline-block">
            <%= link_to 'Edit', edit_project_path(@project), class:"focus:outline-none text-gray-500 text-xs py-1.5 px-3 rounded-lg border border-gray-500 dark:hover:bg-cod-gray-light dark:hover:text-gray-400 dark:hover:border-gray-400" %>
          </div>
        <% end %>
      </div>
      <div class="mb-5">
        <% @project.tags.map(&:name).each do | tag | %>
          <span class="px-4 py-2 rounded-xl mr-2 text-gray-500 bg-gray-200 dark:bg-cod-gray-light">
            <%= tag %>
          </span>
        <% end %>
      </div>
      <p class="text-xl leading-loose font-medium text-gray-800 dark:text-white pb-16 dark:text-gray-100">
        <%= @project.intro %>
      </p>
    </div>


    <div class="mx-auto max-w-4xl text-gray-800 text-lg dark:text-gray-200">
      <%= @project.body %>
    </div>


    <div class="mt-24 transition duration-500 ease-in-out transform hover:-translate-x-1"><%= link_to '<- Back', root_path, class:"text-gray-400 dark:text-gray-500" %></div>
  </div>
</div>
