<div class="flex-grow bg-white dark:bg-black animated fadeIn">
  <div class="max-w-4xl px-8 pt-12 mx-auto mb-12">

    <div class="transition duration-500 ease-in-out transform mb-14 hover:-translate-x-1"><%= link_to '← Back', root_path, class:"text-gray-400 dark:text-gray-500" %></div>

    <div class="max-w-3xl mx-auto">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-5xl font-bold text-gray-800 dark:text-gray-100"><%= @project.title %></h3>
        <% if user_signed_in? %>
          <div class="inline-block">
            <%= link_to 'Edit', edit_project_path(@project), class:"focus:outline-none text-gray-500 text-xs py-1.5 px-3 rounded-lg border border-gray-500 dark:hover:bg-cod-gray-light dark:hover:text-gray-400 dark:hover:border-gray-400" %>
          </div>
        <% end %>
      </div>
      <div class="mb-5">
        <% @project.tags.map(&:name).each do | tag | %>
          <span class="px-4 py-2 mr-2 text-gray-500 bg-gray-200 rounded-xl dark:bg-cod-gray-light">
            <%= tag %>
          </span>
        <% end %>
      </div>
      <p class="pb-16 text-xl font-medium leading-relaxed text-gray-800 dark:text-gray-100">
        <%= @project.intro %>
      </p>
    </div>


    <div class="max-w-4xl mx-auto text-lg text-gray-800 dark:text-gray-200">
      <%= @project.body %>
    </div>


    <div class="mt-24 transition duration-500 ease-in-out transform hover:-translate-x-1"><%= link_to '← Back', root_path, class:"text-gray-400 dark:text-gray-500" %></div>
  </div>
</div>

<% content_for :meta_title, @project.title %>
<% content_for :meta_description, @project.intro %>
